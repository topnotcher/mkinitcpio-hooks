# vim: set ft=sh:

build ()
{
  _version=$(pacman -Qs '^virtualbox$'|sed 's/^[^ ]* \|-[0-9]*$//g;2d')
  echo "Building virtualbox host modules for ${KERNELVERSION} kernel..."
  dkms install vboxhost/$_version -k ${KERNELVERSION}/arch
  echo "Ok."
}

help ()
{
cat<<HELPEOF
  This hook rebuilds virtualbox host modules. It does nothing to the initrd image.
HELPEOF
}
